{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"esModuleInterop": true,
		"strict": true,
		"target": "es2017",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"skipLibCheck": true
	},
	"compileOnSave": true,
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/*.spec.ts", ".eslintrc.js"]
}
