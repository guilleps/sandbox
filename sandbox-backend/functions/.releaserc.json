{
    "branches": [
        "main"
    ],
    "tagFormat": "backend@${version}",
    "parserOpts": {
        "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES"
        ]
    },
    "presetConfig": {
        "types": [
            {
                "type": "feat",
                "section": "üöÄ Features"
            },
            {
                "type": "fix",
                "section": "üêû Bug Fixes"
            },
            {
                "type": "docs",
                "section": "üìù Documentation"
            },
            {
                "type": "style",
                "section": "üé® Styles"
            },
            {
                "type": "refactor",
                "section": "‚ôªÔ∏è Refactors"
            },
            {
                "type": "perf",
                "section": "‚ö° Performance"
            },
            {
                "type": "test",
                "section": "üß™ Tests"
            },
            {
                "type": "build",
                "section": "üì¶ Build"
            },
            {
                "type": "ci",
                "section": "ü§ñ CI"
            },
            {
                "type": "chore",
                "section": "üßπ Chores"
            }
        ]
    },
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        "@semantic-release/changelog",
        "@semantic-release/npm",
        "@semantic-release/github",
        [
            "semantic-release-monorepo",
            {
                "packageRoot": "sandbox-backend"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "CHANGELOG.md",
                    "package.json"
                ],
                "message": "chore(release): backend v${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ]
    ]
}